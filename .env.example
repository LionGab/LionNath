# Configuração do Supabase (OBRIGATÓRIO)
# Obtenha essas credenciais em: https://app.supabase.com/project/[seu-projeto]/settings/api
EXPO_PUBLIC_SUPABASE_URL=https://seu-projeto.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=sua-chave-anonima-aqui

# Configuração do Sentry (OPCIONAL - para crash reporting)
EXPO_PUBLIC_SENTRY_DSN=

# Modo Demo/Mock (OPCIONAL - use 'true' para desenvolvimento sem backend)
# Quando ativado, o app funciona completamente offline com dados mockados
EXPO_PUBLIC_USE_MOCKS=false

# Features (OPCIONAL - padrão: true)
EXPO_PUBLIC_ENABLE_AI_FEATURES=true
EXPO_PUBLIC_ENABLE_GAMIFICATION=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false

# Stripe (OPCIONAL - para pagamentos)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# OneSignal (OPCIONAL - para push notifications)
EXPO_PUBLIC_ONESIGNAL_APP_ID=

# Supabase Functions URL (OPCIONAL)
EXPO_PUBLIC_SUPABASE_FUNCTIONS_URL=
