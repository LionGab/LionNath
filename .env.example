# Environment Variables Template
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# Application
APP_ENV=development
DEBUG=true

# API Configuration
API_URL=http://localhost:3000
API_TIMEOUT=30000

# Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# GitHub (for Copilot MCP)
COPILOT_MCP_GITHUB_PERSONAL_ACCESS_TOKEN=ghp_xxxxxxxxxxxx
COPILOT_MCP_GITHUB_ORG=LionGab

# Sentry (Error Tracking - Optional)
COPILOT_MCP_SENTRY_ACCESS_TOKEN=sntrys_xxxxxxxxxxxx
SENTRY_HOST=https://sentry.example.com
SENTRY_DSN=your_sentry_dsn

# Payment Services
STRIPE_API_KEY=sk_test_xxxxxxxxxxxx
STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxx

# AI Services
OPENAI_API_KEY=sk-xxxxxxxxxxxx
ANTHROPIC_API_KEY=xxxxxxxxxxxx

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/lionnath

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Features (Feature Flags)
ENABLE_DAILY_INTERACTIONS=true
ENABLE_PREMIUM_FEATURES=false
ENABLE_BETA_FEATURES=false

# Third-party Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxxxxxxxxxxx
DISCORD_WEBHOOK_URL=https://discordapp.com/api/webhooks/xxxxxxxxxxxx

# Local Development
SKIP_PREFLIGHT_CHECK=true
INLINE_RUNTIME_CHUNK=false

# Port Configuration
PORT=3000
DEV_SERVER_PORT=8081

# AI Model Configuration
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Content Generation
CONTENT_CACHE_TTL=3600

# User Preferences
DEFAULT_THEME=light
DEFAULT_LANGUAGE=pt-BR

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_TRACKING_ID=xxxxxxxxxxxx

# Telemetry
TELEMETRY_ENABLED=false
COPILOT_TELEMETRY=true
