{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-native",
    "module": "ESNext",
    "moduleResolution": "bundler",

    // ✅ STRICT MODE - Habilitando progressivamente
    "strict": false, // TODO: habilitar após Fase 2
    "noImplicitAny": true, // ✅ Habilitado agora (Fase 1)
    "strictNullChecks": false, // TODO: habilitar na Fase 2
    "strictFunctionTypes": false, // TODO: habilitar na Fase 3
    "strictPropertyInitialization": false, // TODO: habilitar na Fase 3
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@nossa-maternidade/shared": ["../../packages/shared/src/index.ts"],
      "@nossa-maternidade/shared/*": ["../../packages/shared/src/*"],
      "@nossa-maternidade/shared-types": ["../../packages/shared-types/src/index.ts"],
      "@nossa-maternidade/shared-types/*": ["../../packages/shared-types/src/*"],
      "@/*": ["../../src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "*.ts", "*.tsx", "../../src/**/*.ts", "../../src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "build"]
}
